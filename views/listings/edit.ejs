<% layout("/layout/boilerplate.ejs") -%>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h2>Edit Listing</h2>
    <form
      action="/listings/<%=item._id %>?_method=PUT"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          value="<%=item.title %>"
          name="title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Title Required</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="description"
          class="form-control"
          placeholder="Enter Description"
          required
        >
<%=item.description  %></textarea
        >
        <div class="invalid-feedback">Add a brief description</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image </label>
        <input type="file" name="image" class="form-control" />
        <div class="invalid-feedback">Invalid URL</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          type="number"
          value="<%=item.price %>"
          name="price"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Invalid Price</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          value="<%=item.location %>"
          name="location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Invalid Location</div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          type="text"
          value="<%=item.country %>"
          name="country"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Invalid country</div>
      </div>
      <button class="btn btn-dark mt-2">Save Changes</button>
    </form>
  </div>
</div>
